// Template Configuration Settings Schema
model TemplateSettings {
  id                    String   @id @default(cuid())
  companyId             String   @unique
  
  // Company Branding
  companyName           String   @default("QGO Cargo")
  companyLogo           String?  // URL to logo
  companyAddress        String?  @default("Kuwait")
  companyPhone          String?  @default("+965 XXXX XXXX")
  companyEmail          String?  @default("info@qgocargo.com")
  companyWebsite        String?  @default("www.qgocargo.com")
  companyLicense        String?  // License/Registration number
  
  // Invoice Template Settings
  invoiceTemplateType   String   @default("STANDARD") // STANDARD, MODERN, MINIMAL, CLASSIC
  invoiceShowLogo       Boolean  @default(true)
  invoiceShowAddress    Boolean  @default(true)
  invoiceShowPhone      Boolean  @default(true)
  invoiceShowEmail      Boolean  @default(true)
  invoiceShowWebsite    Boolean  @default(true)
  invoiceShowLicense    Boolean  @default(false)
  
  // Invoice Header
  invoiceHeaderBg       String   @default("#2563eb") // Primary color
  invoiceHeaderText     String   @default("#ffffff") // White
  invoiceTitle          String   @default("TAX INVOICE")
  
  // Invoice Footer
  invoiceFooterText     String?  @default("Thank you for your business!")
  invoiceShowFooter     Boolean  @default(true)
  invoiceTermsTitle     String   @default("Terms & Conditions")
  invoiceTerms          String?  @db.Text // Multi-line terms
  invoiceNotes          String?  @db.Text // Default notes
  
  // Invoice Layout
  invoiceShowBorder     Boolean  @default(true)
  invoiceShowGrid       Boolean  @default(true)
  invoiceTableStyle     String   @default("STRIPED") // STRIPED, BORDERED, MINIMAL
  invoiceFontSize       String   @default("MEDIUM") // SMALL, MEDIUM, LARGE
  invoicePaperSize      String   @default("A4") // A4, LETTER, A5
  
  // Invoice Colors
  invoicePrimaryColor   String   @default("#2563eb")
  invoiceSecondaryColor String   @default("#64748b")
  invoiceAccentColor    String   @default("#10b981")
  invoiceDangerColor    String   @default("#ef4444")
  
  // Release Note Template Settings
  releaseNoteTemplate   String   @default("PROFESSIONAL") // PROFESSIONAL, COMPACT, DETAILED
  releaseNoteShowLogo   Boolean  @default(true)
  releaseNoteTitle      String   @default("SHIPMENT RELEASE NOTE")
  
  // Release Note Header
  releaseNoteHeaderBg   String   @default("#1e40af")
  releaseNoteHeaderText String   @default("#ffffff")
  
  // Release Note Sections
  releaseShowShipment   Boolean  @default(true)
  releaseShowStorage    Boolean  @default(true)
  releaseShowItems      Boolean  @default(true)
  releaseShowCollector  Boolean  @default(true)
  releaseShowCharges    Boolean  @default(true)
  releaseShowPhotos     Boolean  @default(false)
  releaseShowTerms      Boolean  @default(true)
  releaseShowSignatures Boolean  @default(true)
  
  // Release Note Terms
  releaseTermsTitle     String   @default("Terms & Conditions")
  releaseTerms          String?  @db.Text
  releaseFooterText     String?  @default("Thank you for choosing our services!")
  
  // Release Note Colors
  releasePrimaryColor   String   @default("#1e40af")
  releaseSecondaryColor String   @default("#475569")
  releaseAccentColor    String   @default("#059669")
  
  // Print Settings
  printMarginTop        Int      @default(10) // mm
  printMarginBottom     Int      @default(10)
  printMarginLeft       Int      @default(15)
  printMarginRight      Int      @default(15)
  
  // Language & Localization
  defaultLanguage       String   @default("en") // en, ar, etc.
  showBilingual         Boolean  @default(false) // English + Arabic
  dateFormat            String   @default("MMM dd, yyyy")
  timeFormat            String   @default("hh:mm a")
  currencySymbol        String   @default("KD")
  currencyPosition      String   @default("AFTER") // BEFORE, AFTER
  
  // Custom Fields
  customField1Label     String?
  customField1Value     String?
  customField2Label     String?
  customField2Value     String?
  customField3Label     String?
  customField3Value     String?
  
  // Signature Settings
  requireStaffSignature Boolean  @default(true)
  requireClientSignature Boolean @default(true)
  signatureHeight       Int      @default(60) // pixels
  
  // QR Code Settings
  showQRCode            Boolean  @default(false)
  qrCodePosition        String   @default("TOP_RIGHT") // TOP_RIGHT, BOTTOM_RIGHT, etc.
  qrCodeSize            Int      @default(100) // pixels
  
  // Watermark
  enableWatermark       Boolean  @default(false)
  watermarkText         String?  @default("PAID")
  watermarkOpacity      Int      @default(10) // 0-100
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // Relations
  company               Company  @relation(fields: [companyId], references: [id])
  
  @@map("template_settings")
}
